
package all_no;
import java.util.Scanner;


public class cl {
static Scanner reader = new Scanner (System.in);
public static void main(String[] args ){
System.out.print("Enter the number of reptitions ");
int t =reader.nextInt();
int x,tn;
long n1,n2,n3;
n3=0;
n2=1;
tn=1;
for(x=0;x<t;x++){
n1=n3+n2;

System.out.println("The reptition number "+ tn +" and its value is "+ n1 +" for "+n3+"+"+n2);
tn++;
n2++;
n3=n1;
}

}
}
